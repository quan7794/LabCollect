<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_12sdp"
        tools:context=".ui.fragment.viewPager.addTest.createTemplate.CreateTemplateFragment"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/template_name"
            android:id="@+id/templateName"/>

        <com.ernestoyaquello.dragdropswiperecyclerview.DragDropSwipeRecyclerView
            android:id="@+id/templateData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divider="@drawable/list_divider"
            app:item_layout="@layout/template_data_item"
            tools:listitem="@layout/template_data_item"/>
    </LinearLayout>

</layout>