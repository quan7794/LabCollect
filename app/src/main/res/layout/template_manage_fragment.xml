<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.feature.manageTemplate.ManageTemplateFragment">

    <com.wac.labcollect.utils.dragSwipeRecyclerview.DragDropSwipeRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        app:item_layout="@layout/template_item" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:visibility="gone"
        android:elevation="@dimen/_100sdp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_repeatCount="1000"
        app:lottie_rawRes="@raw/lottie_loading"
        tools:visibility="visible" />
</FrameLayout>