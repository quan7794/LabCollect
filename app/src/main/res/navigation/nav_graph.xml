<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstScreenFragment">

    <fragment
        android:id="@+id/firstScreenFragment"
        android:name="com.wac.labcollect.ui.fragment.FirstScreenFragment"
        android:label="first_screen_fragment"
        tools:layout="@layout/fragment_first_screen">
        <action
            android:id="@+id/toLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/firstScreenFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_firstScreenFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_firstScreenFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_firstScreenFragment_to_createTemplateFragment"
            app:destination="@id/createTemplateFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.wac.labcollect.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/toFirstScreenFragment"
            app:destination="@id/firstScreenFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.wac.labcollect.ui.fragment.viewPager.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/addFragment"
        android:name="com.wac.labcollect.ui.fragment.viewPager.addTest.AddFragment"
        android:label="AddFragment" />
    <fragment
        android:id="@+id/createTemplateFragment"
        android:name="com.wac.labcollect.ui.fragment.viewPager.addTest.createTemplate.CreateTemplateFragment"
        android:label="CreateTemplateFragment" />
</navigation>